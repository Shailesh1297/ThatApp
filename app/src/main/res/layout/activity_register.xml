<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.Register">

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="110dp"
        android:gravity="center_horizontal"
        android:shadowColor="#F40B0B"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Register"
        android:textSize="40sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_txt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="18dp"
        android:hint="name"
        android:inputType="textPersonName"
        android:maxLength="25"
        android:singleLine="true" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:maxLength="25"
        android:singleLine="true" />

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:hint="phone"
        android:inputType="phone"
        android:maxLength="10"
        android:singleLine="true" />


    <Spinner
        android:id="@+id/register_city_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/register_college_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_city_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp" />


    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_college_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLength="25"
        android:singleLine="true" />

    <Button
        android:id="@+id/register_but"
        android:layout_width="163dp"
        android:layout_height="46dp"
        android:layout_below="@+id/register_password"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"
        android:text="register" />

    <TextView
        android:id="@+id/already_have_account"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_but"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="121dp"
        android:fontFamily="serif"
        android:gravity="top"
        android:text="Have Account Already"
        android:textSize="15sp" />

</RelativeLayout>